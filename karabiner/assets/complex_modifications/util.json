{
  "title": "Utilities",
  "rules": [
    {
      "description": "Switch between windows of same app with option + Tab",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "tab",
            "modifiers": {
              "mandatory": [
                "option"
              ],
							"optional": [
								"shift"
							]
            }
          },
          "to": [
            {
              "key_code": "grave_accent_and_tilde",
              "modifiers": [
								"command"
              ]
            }
          ]
				}
      ]
    }
  ]
}
