#!/bin/bash

set -eux

brew_check() {
  if brew info $1 | grep "Not installed" > /dev/null 2>&1
  then
    echo "  + Installing $1..."
    brew install $1
  else
    echo "  + $1 found."
  fi
}

# Install brew
if test ! $(which brew)
then
  /usr/bin/ruby -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"
fi

# Check go
brew_check go
SRC_DIR=$HOME/src
export GOPATH=$HOME/.go
mkdir -p $GOPATH
mkdir -p $SRC_DIR
export PATH=$PATH:$GOPATH/bin
ln -s $HOME/src $GOPATH/src

# ghq
go get github.com/motemen/ghq

# dotfiles
ghq get potsbo/dotfiles
ln -s $SRC_DIR/potsbo/dotfiles $HOME/.dotfiles
CONFS=(.vimrc .zshrc .gitconfig, .gitignore_global .tmux.conf .tmux-powerlinerc)
for conf in ${CONFS[@]}; do
  if [ ! -f $HOME/$conf ]; then
    ln -s $HOME/.dotfiles/$conf $HOME/$conf
  fi
done

# tmux
brew_check tumx
ghq get potsbo/tmux-powerline
