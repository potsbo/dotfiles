#!/usr/bin/env bash

# inspired by https://github.com/superbrothers/opener/blob/95903db0f9b8f4bb1abc183a03c3189af6d02348/bin/open

set -eu

# get data either form stdin or from file
if (($# == 0)); then
  # if no argument, read from standard input from pipe
  buf=$(cat "$@")
else
  # otherwise read from all arguments
  buf=$@
fi

echo "$buf" | nc -U "$HOME/.opener.sock"
